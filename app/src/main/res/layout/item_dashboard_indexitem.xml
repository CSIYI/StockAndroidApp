<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="80dp"
>

    <TextView
        android:id="@+id/indexitem_symbol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textSize="18sp"
        android:text="SYMBOL"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/indexitem_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="1000.00"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@+id/indexitem_chart"
        app:layout_constraintTop_toTopOf="parent" />


    <TableLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:stretchColumns="2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/indexitem_chart"
        app:layout_constraintStart_toStartOf="parent">


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:textSize="9sp"
                android:text="Open" />
            <TextView
                android:id="@+id/indexitem_open"
                android:textSize="9sp"
                android:text="1000.00" />
            <TextView/>
            <TextView
                android:textSize="9sp"
                android:text="Day Low " />

            <TextView
                android:id="@+id/indexitem_daylow"
                android:textSize="9sp"
                android:text="1000.00" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:textSize="9sp"
                android:text="Volume " />
            <TextView
                android:id="@+id/indexitem_volume"
                android:textSize="9sp"
                android:text="1000.00" />
            <TextView/>
            <TextView
                android:textSize="9sp"
                android:text="Day High " />

            <TextView
                android:id="@+id/indexitem_dayhigh"
                android:textSize="9sp"
                android:text="1000.00" />

        </TableRow>


    </TableLayout>

    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/indexitem_chart"
        android:layout_width="180dp"
        android:layout_height="match_parent"



        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_dashboard" />

</androidx.constraintlayout.widget.ConstraintLayout>
